<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.flydemo.bel.flydemo.AfterSeatActivity">

    <LinearLayout
            android:weightSum="2"
            android:orientation="vertical"
            android:background="#ffffff"
            android:layout_weight="0.9"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                    android:scaleType="centerCrop"
                    android:src="@drawable/air_route"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
                android:weightSum="2"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:layout_weight="0.8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <LinearLayout
                        android:layout_weight="0.9"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:id="@+id/as_fromtext_id"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:gravity="center"
                            android:textAllCaps="false"
                            android:textSize="25sp"
                            android:text="BAN"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_weight="1.2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <ImageView
                            android:src="@drawable/plane_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_weight="0.9"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:id="@+id/as_totext_id"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:gravity="center"
                            android:textAllCaps="false"
                            android:textSize="25sp"
                            android:text="KSA"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_weight="1.2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageView
                        android:padding="6dp"
                        android:src="@drawable/calender_2"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/as_datetext_id"
                        android:textSize="25sp"
                        android:textAllCaps="false"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:text="14 / 11 / 2019"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <View
                    android:background="#ff000d"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:weightSum="4"
            android:orientation="vertical"
            android:background="#ffffff"
            android:layout_weight="0.8"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:paddingLeft="15dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textAllCaps="false"
                    android:textSize="30sp"
                    android:gravity="center_vertical"
                    android:text="Flight"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            <TextView
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textAllCaps="false"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:text="FX707"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:paddingLeft="15dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textAllCaps="false"
                    android:textSize="30sp"
                    android:gravity="center_vertical"
                    android:text="Seat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            <TextView
                    android:id="@+id/as_seatnum_id"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textAllCaps="false"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:text="12A"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:paddingLeft="15dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textAllCaps="false"
                    android:textSize="30sp"
                    android:gravity="center_vertical"
                    android:text="Cabin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            <TextView
                    android:id="@+id/as_classname_id"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textAllCaps="false"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <View
                    android:background="#ff000d"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>
            <EditText
                    android:gravity="center"
                    android:backgroundTint="#ff0004"
                    android:id="@+id/edittext_id"
                    android:textSize="20sp"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:hint="Enter passenger name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:layout_marginTop="15dp"
            android:background="#ffffff"
            android:layout_weight="1.3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <Button
                android:id="@+id/confirmsel_id"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:textSize="22sp"
                android:background="#ff0004"
                android:text="CONTINUE"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>
