<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="5"
        android:background="#ffffff"
        android:layout_margin="10dp"
        tools:context="com.flydemo.bel.flydemo.FlightSearchActivity">

    <LinearLayout
            android:background="@drawable/square_btn_shape"
            android:weightSum="2"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_weight="1.5"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:paddingLeft="10dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:text="From"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
                android:background="#ffffff"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:layout_weight="1.6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageView
                        android:padding="5dp"
                        android:src="@drawable/plane_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                    android:padding="5dp"
                    android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <Spinner
                        android:id="@+id/spin_from_id"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                </Spinner>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:weightSum="2"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@drawable/square_btn_shape"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_weight="1.5"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:paddingLeft="10dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:text="To"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
                android:background="#ffffff"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:layout_weight="1.6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageView
                        android:padding="5dp"
                        android:src="@drawable/plane_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                    android:padding="5dp"
                    android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <Spinner
                        android:id="@+id/spin_to_id"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                </Spinner>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:weightSum="2"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@drawable/square_btn_shape"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_weight="1.5"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:paddingLeft="10dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:text="Depart on"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
                android:background="#ffffff"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:layout_weight="1.6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageButton
                        android:id="@+id/departdateID"
                        android:background="#ffffff"
                        android:padding="15dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/calender_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                    android:padding="5dp"
                    android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:id="@+id/departtextID"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:text="Pick date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:background="#ffffff"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:weightSum="2"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:background="#e2e2e2"
                    android:layout_weight="1.3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:paddingLeft="5dp"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:textStyle="normal|bold"
                        android:text="Adults"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                    android:gravity="center"
                    android:layout_weight="0.7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                        android:id="@+id/adults_qntID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="5dp"
                        app:textSize="12sp"
                        app:initialNumber="1"
                        app:finalNumber="50"
                        android:layout_margin="2dp"
                        app:backGroundColor="#ff8b33"
                        app:textColor="#ffffff"
                        android:gravity="right"
                >
                </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:weightSum="2"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:background="#e2e2e2"
                    android:layout_weight="1.3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:paddingLeft="5dp"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:textStyle="normal|bold"
                        android:text="Children"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                    android:gravity="center"
                    android:layout_weight="0.7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                        android:id="@+id/children_qntID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="5dp"
                        app:textSize="12sp"
                        app:initialNumber="1"
                        app:finalNumber="50"
                        android:layout_margin="2dp"
                        app:backGroundColor="#08ff72"
                        app:textColor="#000000"
                        android:gravity="right"
                >
                </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:weightSum="2"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:background="#e2e2e2"
                    android:layout_weight="1.3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:paddingLeft="5dp"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:textStyle="normal|bold"
                        android:text="Infants"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                    android:gravity="center"
                    android:layout_weight="0.7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                        android:id="@+id/infants_qntID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="5dp"
                        app:textSize="12sp"
                        app:initialNumber="1"
                        app:finalNumber="50"
                        android:layout_margin="2dp"
                        app:backGroundColor="#2196f3"
                        app:textColor="#ffffff"
                        android:gravity="right"
                >
                </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <Button
                android:id="@+id/searchFlyButtID"
                android:background="@drawable/square_btn_shape"
                android:textStyle="normal"
                android:textColor="#ffffff"
                android:textSize="23sp"
                android:textAllCaps="false"
                android:text="SEARCH FLIGHT"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>

    </LinearLayout>

</LinearLayout>
