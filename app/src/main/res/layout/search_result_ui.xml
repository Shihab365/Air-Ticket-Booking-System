<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        android:id="@+id/home_bookingID"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="5dp"
        card_view:cardCornerRadius="8dp"
        card_view:cardBackgroundColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="150dp">

    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_margin="7dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:weightSum="4"
                android:orientation="horizontal"
                android:background="#ffffff"
                android:layout_weight="0.7"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:id="@+id/arrTimeID"
                        android:textSize="17sp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:text="07:30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/arrAirportID"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:textStyle="normal"
                        android:text="Kenny dia,T4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                    android:weightSum="2"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <ImageView
                        android:layout_gravity="center|bottom"
                        android:layout_weight="1"
                        android:src="@drawable/plane_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                <TextView
                        android:id="@+id/flyTimeID"
                        android:textStyle="normal"
                        android:textColor="#000000"
                        android:gravity="center|top"
                        android:textSize="17sp"
                        android:text="6h 15min"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

            </LinearLayout>
            <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:id="@+id/deptTimeID"
                        android:textSize="17sp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:text="10:45"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/deptAirportID"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:textStyle="normal"
                        android:text="SFO,T2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:id="@+id/flyCostID"
                        android:textSize="21sp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:text="$540.35"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
        <View
                android:layout_marginBottom="5dp"
                android:background="#ff0000"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        <LinearLayout
                android:weightSum="4"
                android:orientation="horizontal"
                android:background="#ffffff"
                android:layout_weight="1.3"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageView
                        android:src="@drawable/plane_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:id="@+id/optNameID"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:text="US Bangla"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:background="@drawable/air_class_shape"
                        android:id="@+id/optClassID"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:text="Economy"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                    android:gravity="right"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageView
                        android:padding="8dp"
                        android:src="@drawable/arrow_grn"
                        android:layout_width="45dp"
                        android:layout_height="45dp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>