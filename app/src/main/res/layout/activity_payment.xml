<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
        tools:context="com.flydemo.bel.flydemo.PaymentActivity">

        <LinearLayout
                android:weightSum="2"
                android:orientation="vertical"
                android:background="#ff0004"
                android:layout_weight="1.5"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:weightSum="2"
                    android:layout_weight="1.4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:layout_weight="1"
                        android:paddingLeft="15dp"
                        android:gravity="center_vertical"
                        android:textSize="30sp"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:text="Total Fare"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                <ImageView
                        android:layout_weight="1"
                        android:src="@drawable/plane_3"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:weightSum="2"
                    android:layout_weight="0.6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_weight="0.6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TextView
                            android:gravity="center"
                            android:textSize="40sp"
                            android:textAllCaps="false"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            android:text=""
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:id="@+id/totalfare_id"
                            android:gravity="center"
                            android:textSize="40sp"
                            android:textAllCaps="false"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            android:text="1620.0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_weight="1.4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:id="@+id/p_classname_id"
                            android:paddingRight="20dp"
                            android:gravity="center|right"
                            android:textSize="17sp"
                            android:textAllCaps="false"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            android:text="Economy"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:weightSum="3"
                android:orientation="vertical"
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:gravity="center"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:background="#dfdfdf"
                    android:layout_weight="1.1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageView
                        android:layout_margin="7dp"
                        android:layout_weight="1"
                        android:src="@drawable/visa"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                <View
                        android:background="#ff0004"
                        android:layout_width="2dp"
                        android:layout_height="100dp"/>
                <ImageView
                        android:layout_margin="7dp"
                        android:layout_weight="1"
                        android:src="@drawable/mastercard"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                <View
                        android:background="#ff0004"
                        android:layout_width="2dp"
                        android:layout_height="100dp"/>
                <ImageView
                        android:layout_margin="7dp"
                        android:layout_weight="1"
                        android:src="@drawable/americanexpress"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                    android:weightSum="4"
                    android:orientation="vertical"
                    android:background="#ffffff"
                    android:layout_weight="0.6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <EditText
                            android:backgroundTint="#ff0004"
                            android:id="@+id/cardNumEditId"
                            android:inputType="numberDecimal"
                            android:paddingLeft="15dp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:textAllCaps="false"
                            android:textSize="20sp"
                            android:hint="Card Number"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                        android:gravity="center"
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <EditText
                            android:backgroundTint="#ff0004"
                            android:id="@+id/cardDateEditId"
                            android:layout_weight="1"
                            android:paddingLeft="15dp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:textAllCaps="false"
                            android:textSize="20sp"
                            android:hint="Expiry Date"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    <View
                            android:background="#ff0004"
                            android:layout_width="2dp"
                            android:layout_height="40dp"/>
                    <EditText
                            android:backgroundTint="#ff0004"
                            android:id="@+id/cardCvvEditId"
                            android:inputType="numberDecimal"
                            android:layout_weight="1"
                            android:paddingLeft="15dp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:textAllCaps="false"
                            android:textSize="20sp"
                            android:hint="CVV"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <EditText
                            android:backgroundTint="#ff0004"
                            android:id="@+id/cardNameEditId"
                            android:layout_weight="1"
                            android:paddingLeft="15dp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:textAllCaps="false"
                            android:textSize="20sp"
                            android:hint="Card Holder"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <ImageView
                            android:padding="12dp"
                            android:src="@drawable/lock"
                            android:layout_width="50dp"
                            android:layout_height="50dp"/>
                    <TextView
                            android:textSize="17sp"
                            android:textAllCaps="false"
                            android:textColor="#000000"
                            android:textStyle="normal"
                            android:text="Secure credit card payment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:background="#ffffff"
                    android:layout_weight="1.3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <Button
                        android:id="@+id/paynow_id"
                        android:background="#ff0004"
                        android:textSize="20sp"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:text="PAY NOW"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

            </LinearLayout>

        </LinearLayout>

</LinearLayout>
