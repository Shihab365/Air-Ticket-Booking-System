<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
        tools:context="com.flydemo.bel.flydemo.BoardingPassActivity">

    <LinearLayout
            android:weightSum="3"
            android:orientation="vertical"
            android:layout_weight="1.3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:background="#ec0004"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:weightSum="2"
                    android:orientation="vertical"
                    android:layout_weight="1.1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:paddingLeft="7dp"
                        android:textStyle="normal"
                        android:textColor="#ffffff"
                        android:textAllCaps="false"
                        android:textSize="17sp"
                        android:gravity="bottom|center|left"
                        android:text="Booking reference"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                <TextView
                        android:paddingLeft="7dp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:textAllCaps="false"
                        android:textSize="19sp"
                        android:gravity="top|center|left"
                        android:text="TH 007X"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_weight="0.9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageView
                        android:paddingRight="4dp"
                        android:src="@drawable/earth_plane"
                        android:layout_width="52dp"
                        android:layout_height="52dp"/>
                <TextView
                        android:id="@+id/bp_optname_id"
                        android:textSize="29sp"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:text="Emirates"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <View
                android:background="#ffd000"
                android:layout_width="match_parent"
                android:layout_height="5dp"/>
        <LinearLayout
                android:background="#ec0004"
                android:weightSum="3"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:weightSum="2"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:paddingLeft="7dp"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:textAllCaps="false"
                        android:textSize="19sp"
                        android:text="Flight"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                <TextView
                        android:paddingLeft="7dp"
                        android:gravity="left|top"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:textAllCaps="false"
                        android:textSize="19sp"
                        android:text="FX707"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                    android:weightSum="2"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:textAllCaps="false"
                        android:textSize="19sp"
                        android:text="Departure"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                <TextView
                        android:id="@+id/bp_date_id"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:textAllCaps="false"
                        android:textSize="17sp"
                        android:text="14 / 11 / 2019"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

            </LinearLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:paddingLeft="7dp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:textAllCaps="false"
                        android:textSize="19sp"
                        android:text=""
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                <TextView
                        android:id="@+id/bp_dptime_id"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:textAllCaps="false"
                        android:textSize="17sp"
                        android:text="03:15 PM"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:background="#ffffff"
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:id="@+id/bp_fromID"
                        android:gravity="center|right"
                        android:textSize="25sp"
                        android:textAllCaps="false"
                        android:textColor="#ff0055"
                        android:textStyle="bold"
                        android:text="JFK"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageView
                        android:padding="7dp"
                        android:paddingRight="4dp"
                        android:src="@drawable/plane_red"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:id="@+id/bp_toID"
                        android:gravity="center|left"
                        android:textSize="25sp"
                        android:textAllCaps="false"
                        android:textColor="#ff0055"
                        android:textStyle="bold"
                        android:text="AMS"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:weightSum="4"
            android:layout_weight="0.7"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:background="#ffffff"
                android:weightSum="3"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:gravity="center"
                    android:paddingLeft="7dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textAllCaps="false"
                    android:textSize="19sp"
                    android:text="Boarding pass"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            <TextView
                    android:id="@+id/bp_nameID"
                    android:gravity="center"
                    android:paddingLeft="7dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:text="Mr. Thomas"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            <TextView
                    android:gravity="center"
                    android:paddingLeft="7dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textAllCaps="false"
                    android:textSize="17sp"
                    android:text="Boarding group B"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
                android:background="#ffffff"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                    android:layout_margin="2dp"
                    android:src="@drawable/qrcode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
                android:background="#ffffff"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="2"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:gravity="center|bottom"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textAllCaps="false"
                        android:textSize="24sp"
                        android:text="Terminal"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                <TextView
                        android:background="@drawable/circle_shape"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textAllCaps="false"
                        android:textSize="25sp"
                        android:text="1"
                        android:layout_weight="1"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="2"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:gravity="center|bottom"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textAllCaps="false"
                        android:textSize="24sp"
                        android:text="Gate"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                <TextView
                        android:padding="3dp"
                        android:background="@drawable/circle_shape"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textAllCaps="false"
                        android:textSize="21sp"
                        android:text="C24"
                        android:layout_weight="1"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"/>

            </LinearLayout>
            <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="2"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:gravity="center|bottom"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textAllCaps="false"
                        android:textSize="24sp"
                        android:text="Seat"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                <TextView
                        android:padding="3dp"
                        android:background="@drawable/circle_shape"
                        android:id="@+id/bp_seatID"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textAllCaps="false"
                        android:textSize="21sp"
                        android:text="12A"
                        android:layout_weight="1"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:background="@drawable/wallet_shape"
                    android:layout_width="210dp"
                    android:layout_height="65dp">
                <ImageView
                        android:padding="10dp"
                        android:layout_weight="1.3"
                        android:src="@drawable/googlewallet"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                <TextView
                        android:textSize="15sp"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:layout_weight="0.7"
                        android:gravity="center"
                        android:textColor="#ffffff"
                        android:text="Add to\nGoogle Wallet"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
