<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.flydemo.bel.flydemo.SeatPlanActivity">

    <LinearLayout
            android:background="#ffffff"
            android:layout_marginBottom="8dp"
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="70dp">

        <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:text="Choose your seat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageView
                        android:layout_weight="1.3"
                        android:src="@drawable/seat_green"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                <TextView
                        android:gravity="center|left"
                        android:textSize="18sp"
                        android:textColor="#04d100"
                        android:textStyle="normal"
                        android:textAllCaps="false"
                        android:layout_weight="0.7"
                        android:text="Available"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageView
                        android:layout_weight="1.3"
                        android:src="@drawable/seat_red"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                <TextView
                        android:gravity="center|left"
                        android:textSize="18sp"
                        android:textColor="#ff0000"
                        android:textStyle="normal"
                        android:textAllCaps="false"
                        android:layout_weight="0.7"
                        android:text="Booked"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
            android:background="#ffffff"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="435dp">
        <android.support.v7.widget.RecyclerView
                android:layout_marginLeft="5dp"
                android:layout_marginRight="17dp"
                android:id="@+id/seatplaneRecy_1_id"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>

        <android.support.v7.widget.RecyclerView
                android:layout_marginRight="5dp"
                android:layout_marginLeft="17dp"
                android:id="@+id/seatplaneRecy_2_id"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

    <LinearLayout
            android:background="#ff0004"
            android:layout_marginBottom="2dp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">
        <TextView
                android:paddingLeft="8dp"
                android:gravity="center|left"
                android:textStyle="normal|bold"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:layout_weight="1"
                android:text="Selected seat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        <TextView
                android:layout_marginTop="2dp"
                android:id="@+id/selectseattext_id"
                android:gravity="center"
                android:textStyle="normal|bold"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:layout_weight="1"
                android:text="D4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </LinearLayout>

    <Button
            android:background="#ff0004"
            android:id="@+id/seatconfirm_id"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:text="CONTINUE"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

</LinearLayout>
