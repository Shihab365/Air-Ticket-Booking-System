<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#eff7ff"
        tools:context="com.flydemo.bel.flydemo.HomeActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp">
        <ViewFlipper
                android:id="@+id/home_viewflipperID"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

        </ViewFlipper>
    </LinearLayout>

    <LinearLayout
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="80dp">

        <android.support.v7.widget.CardView
                android:id="@+id/home_bookingID"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="2dp"
                card_view:cardCornerRadius="8dp"
                card_view:cardBackgroundColor="#ff000d"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:text="Booking"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
                android:id="@+id/home_scheduleID"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="2dp"
                card_view:cardCornerRadius="8dp"
                card_view:cardBackgroundColor="#ff000d"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:text="Schedule"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
                android:id="@+id/home_profileID"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="2dp"
                card_view:cardCornerRadius="8dp"
                card_view:cardBackgroundColor="#ff000d"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:text="Profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="182dp">
                <TextView
                        android:background="#ff000d"
                        android:gravity="center"
                        android:layout_margin="1dp"
                        android:padding="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Popular Destination"
                        android:textStyle="normal|bold"
                        android:textColor="#ffffff"
                        android:textSize="17sp"
                />
                <View
                        android:layout_marginLeft="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#000000"
                        android:padding="1dp"
                        android:layout_marginBottom="2dp"
                />
                <android.support.v7.widget.RecyclerView
                        android:id="@+id/recy_populardestID"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                </android.support.v7.widget.RecyclerView>
            </LinearLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="182dp">
                <TextView
                        android:background="#ff000d"
                        android:gravity="center"
                        android:layout_margin="1dp"
                        android:padding="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Offer"
                        android:textStyle="normal|bold"
                        android:textColor="#ffffff"
                        android:textSize="17sp"
                />
                <View
                        android:layout_marginLeft="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#000000"
                        android:padding="1dp"
                        android:layout_marginBottom="2dp"
                />
                <android.support.v7.widget.RecyclerView
                        android:id="@+id/recy_offerID"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                </android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
